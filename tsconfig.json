{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "jsx": "react"
  },
  "include": [
    "src",
    //convert just images to modules
    "./src/declaration.d.ts"
  ],
  "exclude": ["node_modules"]
}
